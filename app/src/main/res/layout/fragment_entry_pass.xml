<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dash_top_card_height"
    android:background="@color/colorPrimaryDark"
    android:padding="16dp"
    tools:context="fgc.tdc18mvp1.fragments.EntryPassFrag">

    <ImageView
        android:id="@+id/dash_epass_iv_dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="ePassOnClick"
        android:src="@drawable/gbm"
        android:tint="@color/colorBackground_BG100" />

    <TextView
        android:id="@+id/dash_epass_tv_uname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dash_epass_iv_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:onClick="ePassOnClick"
        android:text="Aditya Mishra"
        android:textAllCaps="true"
        android:textColor="@color/col1_WhiteSmoke"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dash_epass_tv_designation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dash_epass_tv_uname"
        android:layout_centerHorizontal="true"
        android:onClick="ePassOnClick"
        android:text="Participant"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:textStyle="bold" />

