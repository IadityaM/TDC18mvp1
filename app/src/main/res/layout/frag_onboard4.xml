<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context="fgc.tdc18mvp1.fragments.OnBoardFrag4">

    <TextView
        android:id="@+id/obn_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amaze"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Spectators"
        android:textAlignment="center"
        android:textAllCaps="true" />

    <ImageView
        android:id="@+id/obn_iv_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16"
        android:src="@drawable/ob4_amaze" />

    <TextView
        android:id="@+id/obn_tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="4dp"
        android:text="Earn your way to an elevator pitch session with investors and incubators at TDCâ€˜ 18."
        android:textAlignment="center" />

</LinearLayout>
