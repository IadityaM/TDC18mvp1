<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp">


    <RelativeLayout
        android:id="@+id/part_card_lay_data"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="0dp"
        android:background="@color/colorBackground_W"
        android:elevation="2dp"
        android:padding="12dp">

        <TextView
            android:id="@+id/part_card_tv_stepname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:maxWidth="200dp"
            android:text="User Info"
            android:textColor="@color/colorTextHeading"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/part_card_tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/part_card_tv_stepname"
            android:layout_below="@+id/part_card_tv_stepname"
            android:layout_toStartOf="@+id/part_card_iv_vector"
            android:text="Help us know you"
            android:textColor="@color/colorTextSubheading" />

        <ImageView
            android:id="@+id/part_card_iv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/part_card_tv_desc"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/part_card_tv_stepname"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_navigate_next_black_24dp" />


        <ImageView
            android:id="@+id/part_card_iv_vector"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:elevation="4dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_logo_tdc18_v1" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/part_card_iv_status_strip"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        app:srcCompat="@color/colorAccent3" />

</RelativeLayout>
