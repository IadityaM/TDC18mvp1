<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="fgc.tdc18mvp1.fragments.LearnFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground_W"
        android:elevation="2dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/dash_learn_tv_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="One can never be too prepared for an elevator pitch! Explore the following resources to gain the edge." />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/dash_learn_tv_heading"
            android:layout_marginTop="4dp"
            android:text="Explored 0/30"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/dash_learn_tv_heading"
            android:layout_marginStart="40dp"
            android:layout_marginTop="4dp"
            android:text="*10 New"
            android:textColor="@color/colorAccent2Dark" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dash_learn_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
